<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.as1">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NETWORK_STATE" />

    <application
        android:name="com.example.as1.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AS1"
        android:usesCleartextTraffic="true"
        >
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity
                android:name=".ChatActivity"
                android:exported="true"
                android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".BrawlerActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".AccountActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".CreateAccountActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".SignedInActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".BattleActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".LeagueActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".GameModeSelectActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".MultiplayerReadyActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".ChangePasswordActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity android:name=".LeagueRequestsActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>