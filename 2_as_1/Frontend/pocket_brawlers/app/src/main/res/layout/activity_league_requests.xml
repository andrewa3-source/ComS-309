<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/pbbackground2">

<Button
    android:id="@+id/backBtn"
    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
    android:layout_width="114dp"
    android:layout_height="50dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:backgroundTint="#FFEB3B"
    android:fontFamily="@font/bangers"
    android:text="Back"
    android:textSize="16sp"
    app:cornerRadius="25px"
    app:icon="?attr/homeAsUpIndicator"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:rippleColor="#FF5722"
    app:strokeColor="#FF5722" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="90dp"
    android:layout_height="38dp"
    android:fontFamily="@font/bangers"
    android:shadowColor="#000000"
    android:shadowRadius="10"
    android:text="Username"
    android:textAlignment="center"
    android:textColor="#FFEB3B"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="@+id/usernameRequestInput"
    app:layout_constraintTop_toBottomOf="@+id/leagueId" />

<ListView
    android:id="@+id/memberList"
    android:layout_width="269dp"
    android:layout_height="348dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.939"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/usernameRequestInput"
    style="@style/Widget.AppCompat.EditText"
    android:layout_width="211dp"
    android:layout_height="40dp"
    android:layout_marginStart="32dp"
    android:background="@android:drawable/editbox_dropdown_dark_frame"
    android:backgroundTint="#90000000"
    android:ems="10"
    android:gravity="start|top"
    android:inputType="text"
    android:shadowColor="#000000"
    android:shadowRadius="10"
    android:singleLine="true"
    android:textColor="#FFEB3B"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView6" />

<Button
    android:id="@+id/acceptBtn"
    android:layout_width="118dp"
    android:layout_height="50dp"
    android:backgroundTint="#FFEB3B"
    android:fontFamily="@font/bangers"
    android:text="Accept"
    android:textColor="#000000"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/usernameRequestInput"
    app:layout_constraintStart_toStartOf="@+id/usernameRequestInput"
    app:layout_constraintTop_toBottomOf="@+id/usernameRequestInput" />

    <Button
        android:id="@+id/declineBtn"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/bangers"
        android:text="Decline"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/usernameRequestInput"
        app:layout_constraintStart_toStartOf="@+id/usernameRequestInput"
        app:layout_constraintTop_toBottomOf="@+id/acceptBtn" />

<TextView
    android:id="@+id/leagueId"
    android:layout_width="233dp"
    android:layout_height="107dp"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/bangers"
    android:shadowColor="#000000"
    android:shadowRadius="20"
    android:text="League "
    android:textAlignment="center"
    android:textColor="#FFFFFF"
    android:textSize="52sp"
    app:layout_constraintStart_toEndOf="@+id/backBtn"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>